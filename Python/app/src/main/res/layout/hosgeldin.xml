<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/py"
    android:gravity="center"
    >

    <Button
        android:id="@+id/python"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/buttonshape_kotlin_nedir"
        android:shadowColor="#FFC2B3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="PYTHON NEDİR ?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <Button
        android:id="@+id/python_dersleri"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/buttonshape_kotlin_dersleri"
        android:shadowColor="#FFC2B3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="PYTHON DERSLERİ"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/python_ornekleri"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/buttonshape_kotlin_ornekleri"
        android:shadowColor="#FFC2B3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="PYTHON ÖRNEKLERİ"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/python_java"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/buttonshape_kotlin_java"
        android:shadowColor="#FFC2B3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="PYTHON VE DAHA SI ?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>